<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/ic_header"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/imageView"/>
    <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="72dp"
            android:src="@drawable/logo"
            android:id="@+id/imageView2"/>

    <EditText android:layout_width="220dp" android:layout_height="45dp"
              android:layout_marginTop="16dp"
              app:layout_constraintTop_toBottomOf="@+id/imageView2"
              app:layout_constraintEnd_toEndOf="parent"
              android:hint="@string/username"
              android:paddingStart="20dp"
              android:textColorHint="@color/colorGrey"
              android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp"
              android:id="@+id/et_email"
              android:background="@drawable/ic_rectangle"/>

    <EditText
            android:layout_width="220dp" android:layout_height="45dp"
            android:background="@drawable/ic_rectangle"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="@string/password"
            android:paddingStart="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/et_email" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:id="@+id/et_password"/>

    <Button
            android:layout_width="100dp" android:layout_height="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/ic_rectangle"
            android:text="@string/masuk"
            android:textColor="@color/White"
            android:backgroundTint="@color/colorGreen"
            app:layout_constraintTop_toBottomOf="@+id/et_password" android:id="@+id/btn_masuk"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/belum_punya_akun"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_masuk"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/textView6" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Register"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginTop="8dp"
              android:textSize="16dp"
              android:id="@+id/tv_register"
              android:textColor="@color/colorGreen"
              app:layout_constraintTop_toBottomOf="@+id/textView6"
              app:layout_constraintStart_toStartOf="parent"
              />

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/ic_footer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>