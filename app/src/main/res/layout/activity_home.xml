<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/ic_header"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/imageView3"/>

    <ImageView
            android:layout_width="100dp"
            android:layout_height="25dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:src="@drawable/logo"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"/>

    <ImageView android:layout_width="35dp" android:layout_height="35dp"
               android:src="@drawable/ic_person_black_24dp"
               tools:ignore="MissingConstraints" android:layout_marginTop="4dp"
               android:layout_alignParentTop="true"
               android:background="@drawable/ic_circle"
               app:layout_constraintTop_toBottomOf="@+id/imageView2"
               android:layout_marginStart="16dp"
               app:layout_constraintStart_toStartOf="parent" android:id="@+id/imageView4"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Joko Triyanto"
              android:textColor="@color/Gray"
              android:textSize="20dp"
              app:layout_constraintStart_toEndOf="@+id/imageView4" android:layout_marginStart="8dp"
              android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"
              android:id="@+id/textView"/>

    <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_notifications_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <ScrollView android:layout_width="match_parent"

                app:layout_constraintTop_toBottomOf="@+id/imageView4"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp">
        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:id="@+id/rv_home"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
        >

        </android.support.v7.widget.RecyclerView>
    </ScrollView>
</android.support.constraint.ConstraintLayout>