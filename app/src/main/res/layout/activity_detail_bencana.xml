<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/ic_header"
            android:id="@+id/imageView3"/>
    <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:context=".DetailBencana">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:orientation="vertical">
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_big_radius"
                    android:backgroundTint="@color/grey"
                    android:padding="16dp" tools:layout_editor_absoluteY="90dp" tools:layout_editor_absoluteX="16dp"
                    tools:ignore="MissingConstraints">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:background="@drawable/ic_rectangle" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" android:id="@+id/linearLayout">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:layout_gravity="bottom"
                            android:id="@+id/img_bencana"
                            android:background="@drawable/haketone_disaster"/>

                </LinearLayout>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tsunami - Palu"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:id="@+id/tv_nama_bencana"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="28 Oktober 2018"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/tv_date_bencana"
                        app:layout_constraintTop_toBottomOf="@+id/tv_nama_bencana"/>

                <TextView
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="@string/deskripsi"
                        tools:layout_editor_absoluteX="0dp" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_date_bencana" tools:ignore="MissingConstraints"
                        android:background="@drawable/ic_rectangle"
                        android:padding="8dp" android:id="@+id/textView2"/>
                <ImageView
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:src="@drawable/ic_android_black_24dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
                        android:id="@+id/imageView5"/>
                <TextView
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="@string/uang"
                        android:layout_marginTop="8dp"
                        android:textSize="18sp"
                        app:layout_constraintTop_toBottomOf="@+id/textView2"
                        app:layout_constraintStart_toEndOf="@+id/imageView5" android:layout_marginStart="8dp"
                        android:id="@+id/textView3"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="@drawable/ic_rectangle"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView3"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        android:gravity="start"
                        android:padding="5dp"
                        android:backgroundTint="@color/Gray" android:id="@+id/linearLayout3">

                    <ImageView
                            android:layout_width="270dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_rectangle"
                            android:backgroundTint="@color/colorGreen"/>
                </LinearLayout>

                <ImageView
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:src="@drawable/ic_android_black_24dp"
                        tools:ignore="MissingConstraints" android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        android:id="@+id/imageView6"/>
                <TextView
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="@string/uang"
                        android:textSize="18sp"
                        tools:ignore="MissingConstraints" android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
                        app:layout_constraintStart_toEndOf="@+id/imageView6" android:layout_marginStart="8dp"
                        android:id="@+id/textView4"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="@drawable/ic_rectangle"

                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        android:gravity="start"
                        android:padding="5dp"
                        android:backgroundTint="@color/Gray"
                        tools:ignore="MissingConstraints" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:id="@+id/linearLayout4">

                    <ImageView
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_rectangle"
                            android:backgroundTint="@color/colorGreen"/>
                </LinearLayout>

                <ImageView
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:src="@drawable/ic_android_black_24dp"
                        tools:ignore="MissingConstraints"
                        android:layout_marginTop="24dp"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" android:id="@+id/imageView7"/>
                <TextView
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="@string/uang"
                        android:textSize="18sp"
                        tools:ignore="MissingConstraints"
                        app:layout_constraintStart_toEndOf="@+id/imageView7"
                        android:layout_marginStart="8dp" android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" android:id="@+id/textView5"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="@drawable/ic_rectangle"
                        android:gravity="start"
                        android:padding="5dp"
                        android:backgroundTint="@color/Gray"
                        tools:ignore="MissingConstraints" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView5" android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                            android:layout_width="250dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_rectangle"
                            android:backgroundTint="@color/colorGreen"/>
                </LinearLayout>

            </android.support.constraint.ConstraintLayout>

            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/ic_rectangle"
                    android:text="Donasi"
                    android:textColor="@color/White"
                    android:backgroundTint="@color/colorGreen"
            />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
